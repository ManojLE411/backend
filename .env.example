# Server Configuration
NODE_ENV=development
PORT=5000
API_BASE_URL=http://localhost:5000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_URI_PROD=

# JWT Configuration
# IMPORTANT: Change this to a secure random string in production (minimum 32 characters)
JWT_SECRET=
JWT_EXPIRES_IN=
JWT_REFRESH_EXPIRES_IN=

# File Upload Configuration
MAX_FILE_SIZE=
UPLOAD_PATH=

# Email Configuration (Optional - for sending emails)
# Uncomment and configure if you want to send emails
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@.com

# CORS Configuration
# Update this to match your frontend URL
CORS_ORIGIN=http://localhost:5173

# Admin Registration (Optional)
# Set a key for admin registration if needed
ADMIN_REGISTRATION_KEY=
